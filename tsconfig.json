{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "es6",
		"outDir": "./out",
		"rootDir": "./src",
		"lib": [
			"es6",
			"DOM"
		],
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"incremental": true,
		"newLine": "LF"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"src/test"
	]
}
